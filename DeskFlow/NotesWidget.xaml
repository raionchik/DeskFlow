<Window x:Class="DeskFlow.NotesWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notes" Height="400" Width="300"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="False" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Border Background="#0F172A" CornerRadius="10" BorderBrush="#334155" BorderThickness="1" Padding="20">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Text="📝" FontSize="24" Margin="0,0,10,0"/>
                <TextBlock Text="Заметки" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
            <TextBox x:Name="NotesTextBox"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     Height="300"
                     Background="#1E293B"
                     Foreground="White"
                     BorderBrush="#475569"
                     Padding="15"
                     FontSize="14"
                     TextChanged="NotesTextBox_TextChanged"/>
            <TextBlock x:Name="NotesStatus" Text="Сохранено автоматически" Foreground="#10B981" FontSize="11" Margin="0,5,0,0" HorizontalAlignment="Right"/>
        </StackPanel>
    </Border>
</Window>