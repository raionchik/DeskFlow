<Window x:Class="DeskFlow.CalendarWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calendar" Height="300" Width="300"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="False" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Border Background="#0F172A" CornerRadius="10" BorderBrush="#334155" BorderThickness="1" Padding="20">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Text="📅" FontSize="24" Margin="0,0,10,0"/>
                <TextBlock Text="Календарь" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>

            <Calendar x:Name="CalendarWidget1"
                      Background="#1E293B"
                      Foreground="White"
                      BorderBrush="#475569"
                      FirstDayOfWeek="Monday"/>
        </StackPanel>
    </Border>
</Window>