<Window x:Class="DeskFlow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DeskFlow - Организация рабочего стола"
        Height="750" Width="1300"
        WindowStartupLocation="CenterScreen"
        Background="#1E293B"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style TargetType="Button" x:Key="ModernButton">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <Border Grid.Row="0" Background="#0F172A" BorderBrush="#334155" BorderThickness="0,0,0,1">
            <Grid Margin="20,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#3B82F6" CornerRadius="8" Padding="10" Margin="0,0,15,0">
                        <TextBlock Text="📁" FontSize="24"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="DeskFlow Pro" FontSize="22" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Профессиональная организация рабочего стола" FontSize="12" Foreground="#94A3B8"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <TextBlock x:Name="StatusText" Text="● Система активна" Foreground="#10B981" FontSize="13" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
        <!-- Tabs -->
        <Border Grid.Row="1" Background="#1E293B" BorderBrush="#334155" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal" Margin="20,0">
                <Button x:Name="BtnDesktop" Content="📁 Рабочий стол" Click="BtnDesktop_Click" Style="{StaticResource ModernButton}" Margin="0,0,5,0"/>
                <Button x:Name="BtnWidgets" Content="📊 Виджеты" Click="BtnWidgets_Click" Style="{StaticResource ModernButton}" Margin="5,0"/>
                <Button x:Name="BtnNotesTasks" Content="📝 Заметки и задачи" Click="BtnNotesTasks_Click" Style="{StaticResource ModernButton}" Margin="5,0"/>
                <Button x:Name="BtnProfiles" Content="👤 Профили" Click="BtnProfiles_Click" Style="{StaticResource ModernButton}" Margin="5,0"/>
                <Button x:Name="BtnSort" Content="🔄 Сортировка" Click="BtnSort_Click" Style="{StaticResource ModernButton}" Margin="5,0"/>
                <Button x:Name="BtnSettings" Content="⚙️ Настройки" Click="BtnSettings_Click" Style="{StaticResource ModernButton}" Margin="5,0"/>
            </StackPanel>
        </Border>
        <!-- Content -->
        <Grid Grid.Row="2" Margin="20">
            <!-- Desktop Tab -->
            <Grid x:Name="DesktopPanel" Visibility="Visible">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Button Content="🔄 Сканировать" Click="BtnScanDesktop_Click" Style="{StaticResource ModernButton}" Margin="0,0,10,0"/>
                    <Button Content="📂 Добавить" Click="BtnAddFiles_Click" Style="{StaticResource ModernButton}" Margin="0,0,10,0"/>
                    <Button Content="🔄 Сортировать виртуально" Click="BtnAutoSort_Click" Style="{StaticResource ModernButton}" Background="#10B981" Margin="0,0,10,0"/>
                    <Button Content="📦 Переместить в папки" Click="BtnMoveToFolders_Click" Style="{StaticResource ModernButton}" Background="#F59E0B" Margin="0,0,10,0"/>
                    <Button Content="↺ Отменить" Click="BtnUndo_Click" Style="{StaticResource ModernButton}" Background="#64748B" Margin="0,0,10,0"/>
                    <Button Content="🗑️ Очистить" Click="BtnClear_Click" Style="{StaticResource ModernButton}" Background="#EF4444"/>
                    <TextBlock x:Name="FileCountText" Text="Файлов: 0" Foreground="#94A3B8" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="14"/>
                </StackPanel>
                <Border Grid.Row="1" Background="#0F172A" CornerRadius="10" BorderBrush="#334155" BorderThickness="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="FilesListBox" Margin="10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1E293B" CornerRadius="8" Padding="15" Margin="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Background="{Binding CategoryColor}" CornerRadius="6" Padding="8" Margin="0,0,15,0">
                                                <TextBlock Text="{Binding Icon}" FontSize="20"/>
                                            </Border>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}" FontWeight="Medium" Foreground="White" FontSize="14"/>
                                                <TextBlock Text="{Binding Category}" Foreground="#94A3B8" FontSize="11" Margin="0,3,0,0"/>
                                                <TextBlock Text="{Binding Path}" Foreground="#64748B" FontSize="10" Margin="0,2,0,0" TextTrimming="CharacterEllipsis"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="2" Text="{Binding Size}" Foreground="#64748B" VerticalAlignment="Center" Margin="15,0"/>
                                            <Button Grid.Column="3" Content="🗑️" Background="#EF4444" Padding="8,5" BorderThickness="0"
                                                    Cursor="Hand" Click="BtnDeleteFile_Click" Tag="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Grid>
            <!-- Widgets Tab -->
            <Grid x:Name="WidgetsPanel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="📊 Виджеты рабочего стола" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                    <TextBlock Text="Добавляйте полезные виджеты на свой рабочий стол" Foreground="#94A3B8" FontSize="13"/>
                </StackPanel>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Clock Widget -->
                        <Border Grid.Column="0" Background="#0F172A" CornerRadius="10" BorderBrush="#334155" BorderThickness="1" Margin="0,0,10,0" Padding="20">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="🕐" FontSize="24" Margin="0,0,10,0"/>
                                    <TextBlock Text="Часы и дата" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                                </StackPanel>

                                <Border Background="#1E293B" CornerRadius="8" Padding="30,20" Margin="0,0,0,15">
                                    <StackPanel>
                                        <TextBlock x:Name="ClockTime" Text="00:00:00" FontSize="42" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                        <TextBlock x:Name="ClockDate" Text="Понедельник, 1 января 2024" FontSize="14" Foreground="#94A3B8" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                    </StackPanel>
                                </Border>

                                <StackPanel>
                                    <TextBlock Text="Формат времени:" Foreground="#94A3B8" FontSize="12" Margin="0,0,0,5"/>
                                    <ComboBox x:Name="ClockFormat" SelectedIndex="0" Background="#1E293B" Foreground="White" BorderBrush="#475569">
                                        <ComboBoxItem Content="24 часа"/>
                                        <ComboBoxItem Content="12 часов (AM/PM)"/>
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <!-- Calendar Widget -->
                        <Border Grid.Column="1" Background="#0F172A" CornerRadius="10" BorderBrush="#334155" BorderThickness="1" Margin="10,0,0,0" Padding="20">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <TextBlock Text="📅" FontSize="24" Margin="0,0,10,0"/>
                                    <TextBlock Text="Календарь" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                                </StackPanel>

                                <Calendar x:Name="CalendarWidget"
                                          Background="#1E293B"
                                          Foreground="White"
                                          BorderBrush="#475569"
                                          FirstDayOfWeek="Monday"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </ScrollViewer>
            </Grid>
            <!-- Notes and Tasks Tab (в одном месте) -->
            <Grid x:Name="NotesTasksPanel" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Notes -->
                <Border Grid.Column="0" Background="#0F172A" CornerRadius="10" BorderBrush="#334155" BorderThickness="1" Margin="0,0,10,0" Padding="20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="📝" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Заметки" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBox x:Name="NotesTextBox"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"
                                 Height="500"
                                 Background="#1E293B"
                                 Foreground="White"
                                 BorderBrush="#475569"
                                 Padding="15"
                                 FontSize="14"
                                 TextChanged="NotesTextBox_TextChanged"/>
                        <TextBlock x:Name="NotesStatus" Text="Сохранено автоматически" Foreground="#10B981" FontSize="11" Margin="0,5,0,0" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>
                <!-- Tasks -->
                <Border Grid.Column="1" Background="#0F172A" CornerRadius="10" BorderBrush="#334155" BorderThickness="1" Margin="10,0,0,0" Padding="20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="✅" FontSize="24" Margin="0,0,10,0"/>
                            <TextBlock Text="Список задач" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="NewTaskTextBox"
                                     Background="#1E293B"
                                     Foreground="White"
                                     BorderBrush="#475569"
                                     Padding="10"
                                     FontSize="14"
                                     KeyDown="NewTaskTextBox_KeyDown"/>
                            <Button Grid.Column="1" Content="➕" Click="BtnAddTask_Click"
                                    Background="#10B981" Foreground="White"
                                    Padding="12,8" Margin="10,0,0,0"
                                    BorderThickness="0" Cursor="Hand"/>
                        </Grid>
                        <ScrollViewer Height="450" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="TasksListBox">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#1E293B" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <CheckBox Grid.Column="0"
                                                          IsChecked="{Binding Completed}"
                                                          Checked="TaskCheckBox_Changed"
                                                          Unchecked="TaskCheckBox_Changed"
                                                          Tag="{Binding}"
                                                          Margin="0,0,10,0"
                                                          VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding Text}"
                                                           Foreground="White"
                                                           FontSize="14"
                                                           TextWrapping="Wrap"
                                                           VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Completed}" Value="True">
                                                                    <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                                    <Setter Property="Foreground" Value="#64748B"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <Button Grid.Column="2"
                                                        Content="🗑️"
                                                        Background="#EF4444"
                                                        Padding="6,4"
                                                        BorderThickness="0"
                                                        Cursor="Hand"
                                                        Click="BtnDeleteTask_Click"
                                                        Tag="{Binding}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        <TextBlock x:Name="TasksStats" Text="Выполнено: 0 из 0" Foreground="#94A3B8" FontSize="12" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
            <!-- Profiles Tab -->
            <Grid x:Name="ProfilesPanel" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Button Content="➕ Создать профиль" Click="BtnCreateProfile_Click" Style="{StaticResource ModernButton}"/>
                    <TextBlock x:Name="ProfileCountText" Text="Профилей: 0" Foreground="#94A3B8" VerticalAlignment="Center" Margin="20,0,0,0" FontSize="14"/>
                </StackPanel>
                <Border Grid.Row="1" Background="#0F172A" CornerRadius="10" BorderBrush="#334155" BorderThickness="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ProfilesListBox" Margin="10">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#1E293B" CornerRadius="8" Padding="15" Margin="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0" Background="#8B5CF6" CornerRadius="6" Padding="8" Margin="0,0,15,0">
                                                <TextBlock Text="👤" FontSize="20"/>
                                            </Border>

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}" FontWeight="Medium" Foreground="White" FontSize="14"/>
                                                <TextBlock Text="{Binding Description}" Foreground="#94A3B8" FontSize="11" Margin="0,3,0,0"/>
                                                <TextBlock Text="{Binding FilesCount}" Foreground="#64748B" FontSize="11" Margin="0,3,0,0"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                                <Button Content="▶ Применить" Background="#10B981" Padding="10,5" Margin="0,0,5,0"
                                                        BorderThickness="0" Cursor="Hand" Click="BtnApplyProfile_Click" Tag="{Binding}"/>
                                                <Button Content="🗑️" Background="#EF4444" Padding="8,5" BorderThickness="0"
                                                        Cursor="Hand" Click="BtnDeleteProfile_Click" Tag="{Binding}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Grid>
            <!-- Sorting Tab -->
            <Grid x:Name="SortPanel" Visibility="Collapsed">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="🔄 Настройки сортировки файлов" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

                        <Border Background="#0F172A" CornerRadius="10" Padding="20" BorderBrush="#334155" BorderThickness="1" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Директория для папок:" FontSize="16" FontWeight="Medium" Foreground="White" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="SortDirectoryTextBox"
                                             Background="#1E293B"
                                             Foreground="White"
                                             BorderBrush="#475569"
                                             Padding="10"
                                             FontSize="14"
                                             IsReadOnly="True"/>
                                    <Button Grid.Column="1" Content="📂 Выбрать" Click="BtnSelectDirectory_Click"
                                            Background="#3B82F6" Foreground="White" Padding="12,8" Margin="10,0,0,0"
                                            BorderThickness="0" Cursor="Hand"/>
                                </Grid>
                                <TextBlock Text="По умолчанию: рабочий стол" Foreground="#64748B" FontSize="11" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#0F172A" CornerRadius="10" Padding="20" BorderBrush="#334155" BorderThickness="1" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Категории файлов:" FontSize="16" FontWeight="Medium" Foreground="White" Margin="0,0,0,15"/>

                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="📄 Документы" Foreground="#3B82F6" FontSize="14" FontWeight="Medium"/>
                                    <TextBlock Grid.Column="1" Text=".doc, .docx, .pdf, .txt, .xlsx, .pptx" Foreground="#94A3B8" FontSize="12"/>
                                </Grid>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="🖼️ Изображения" Foreground="#10B981" FontSize="14" FontWeight="Medium"/>
                                    <TextBlock Grid.Column="1" Text=".jpg, .png, .gif, .bmp, .svg" Foreground="#94A3B8" FontSize="12"/>
                                </Grid>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="🎥 Видео" Foreground="#EF4444" FontSize="14" FontWeight="Medium"/>
                                    <TextBlock Grid.Column="1" Text=".mp4, .avi, .mkv, .mov" Foreground="#94A3B8" FontSize="12"/>
                                </Grid>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="🎵 Аудио" Foreground="#F59E0B" FontSize="14" FontWeight="Medium"/>
                                    <TextBlock Grid.Column="1" Text=".mp3, .wav, .flac, .aac" Foreground="#94A3B8" FontSize="12"/>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="📦 Архивы" Foreground="#8B5CF6" FontSize="14" FontWeight="Medium"/>
                                    <TextBlock Grid.Column="1" Text=".zip, .rar, .7z, .tar" Foreground="#94A3B8" FontSize="12"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        <Border Background="#0F172A" CornerRadius="10" Padding="20" BorderBrush="#334155" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Настройки:" FontSize="16" FontWeight="Medium" Foreground="White" Margin="0,0,0,15"/>

                                <CheckBox x:Name="ChkAutoSort" Content="Автоматическая виртуальная сортировка при добавлении файлов"
                                          Foreground="White" Margin="0,0,0,10" FontSize="13" Checked="ChkAutoSort_Changed" Unchecked="ChkAutoSort_Changed"/>
                                <CheckBox x:Name="ChkNotifications" Content="Показывать уведомления" IsChecked="True"
                                          Foreground="White" Margin="0,0,0,10" FontSize="13"/>
                                <CheckBox x:Name="ChkMonitoring" Content="Мониторить рабочий стол в реальном времени" IsChecked="True"
                                          Foreground="White" FontSize="13" Checked="ChkMonitoring_Changed" Unchecked="ChkMonitoring_Changed"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
            <!-- Settings Tab -->
            <Grid x:Name="SettingsPanel" Visibility="Collapsed">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="⚙️ Настройки приложения" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

                        <Border Background="#0F172A" CornerRadius="10" Padding="20" BorderBrush="#334155" BorderThickness="1" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Резервное копирование:" FontSize="16" FontWeight="Medium" Foreground="White" Margin="0,0,0,15"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="💾 Экспорт данных" Click="BtnExport_Click" Style="{StaticResource ModernButton}" Margin="0,0,10,0"/>
                                    <Button Content="📥 Импорт данных" Click="BtnImport_Click" Style="{StaticResource ModernButton}" Background="#10B981"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <Border Background="#0F172A" CornerRadius="10" Padding="20" BorderBrush="#334155" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="О приложении:" FontSize="16" FontWeight="Medium" Foreground="White" Margin="0,0,0,15"/>
                                <TextBlock Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5">
                                    <Run Text="Версия:" FontWeight="Medium" Foreground="White"/> 1.0.0
                                </TextBlock>
                                <TextBlock Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5">
                                    <Run Text="Платформа:" FontWeight="Medium" Foreground="White"/> Windows 10/11
                                </TextBlock>
                                <TextBlock x:Name="FilesStatsText" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5">
                                    <Run Text="Файлов в системе:" FontWeight="Medium" Foreground="White"/> 0
                                </TextBlock>
                                <TextBlock x:Name="ProfilesStatsText" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5">
                                    <Run Text="Профилей:" FontWeight="Medium" Foreground="White"/> 0
                                </TextBlock>
                                <TextBlock x:Name="TasksStatsText" Foreground="#94A3B8" FontSize="13" Margin="0,0,0,5">
                                    <Run Text="Задач:" FontWeight="Medium" Foreground="White"/> 0
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
        <!-- Notification Toast -->
        <Border x:Name="NotificationToast"
                Background="#0F172A"
                CornerRadius="8"
                Padding="20,12"
                BorderBrush="#10B981"
                BorderThickness="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,20,20,0"
                Visibility="Collapsed">
            <TextBlock x:Name="NotificationText" Text="" Foreground="White" FontSize="13" FontWeight="Medium"/>
        </Border>
    </Grid>
</Window>